            silent !echo -ne "]12;\#8ae234\x7"

            let &t_SI="]12;\#dd4010\x7"
            let &t_EI="]12;\#8ae234\x7"

            au VimLeave * silent !echo -ne "]12;\#8ae234\x7"

            set ttymouse=urxvt
        endif
