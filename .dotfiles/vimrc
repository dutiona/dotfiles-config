    set wildmenu                        " Une petite fenÃªtre pour voir les complÃ©tions possibles
    set wildmode=list:longest,full
    set wildignore=.svn,CVS,.git,.hg,*.o,*.a,*.class,*.mo,*.la,*.so,*.obj,*.swp,*.jpe?g,*.png,*.xpm,*.gif,*.pyc,*/.tox/*,*.egg-info/*
    set nojoinspaces                    " Comportement amÃ©liorÃ© de la touche J
    set confirm                         " Confirmation lorsqu'on quitte et qu'il y a des modifications non sauvegardÃ©
    set autoread                        " watch for file changes
    set title
    set cursorline                      " Mise en Ã©vidence de la ligne oÃ¹ se trouve le curseur
    set number                          " Affiche les numÃ©ros des lignes
